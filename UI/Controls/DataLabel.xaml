<UserControl x:Class="StationeryStoreManagementSystem.UI.Controls.DataLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StationeryStoreManagementSystem.UI.Controls"
             mc:Ignorable="d"
             x:Name="DataLabelControl"
             d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding ElementName=DataLabelControl,Path=LabelData,Mode=TwoWay}" FontSize="{Binding ElementName=DataLabelControl,Path=FontSize,Mode=TwoWay}"/>
        <TextBlock Text="{Binding ElementName=DataLabelControl,Path=TextData,Mode=TwoWay}" FontSize="{Binding ElementName=DataLabelControl,Path=FontSize,Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
