<local:AbstractEntryForm x:Class="StationeryStoreManagementSystem.UI.ViewNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StationeryStoreManagementSystem.UI"
             xmlns:Components="clr-namespace:StationeryStoreManagementSystem.UI.Components"
             xmlns:Controls="clr-namespace:StationeryStoreManagementSystem.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Components:TitleBlock Title="View Notification"/>
        <Controls:DataLabel x:Name="fromLabel" LabelData="From: " FontSize="20" Margin="20 20 20 0"/>
        <Controls:DataLabel x:Name="timestampLabel" LabelData="Timestamp: " FontSize="20" Margin="20 20 20 0"/>
        <Controls:TextEntry x:Name="content" LabelText="Notification" FontSize="16" Margin="20 20 20 0" IsReadOnly="True"/>
        <Button Content="Back" HorizontalAlignment="Center" Height="50" Width="100" Click="BackButton_Click"/>
    </StackPanel>
</local:AbstractEntryForm>
