<UserControl x:Class="StationeryStoreManagementSystem.UI.Themes.EmployeeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StationeryStoreManagementSystem.UI.Themes"
             xmlns:Components="clr-namespace:StationeryStoreManagementSystem.UI.Components"
             xmlns:Controls="clr-namespace:StationeryStoreManagementSystem.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="860" d:DesignWidth="810">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Components:TitleBlock Grid.Row="0" x:Name="titleBlock" Title="Add Employee"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid ScrollViewer.CanContentScroll="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Controls:TextEntry Grid.Row="0" Grid.Column="0" Text="{Binding Username}" LabelText="Username" MaxLength="8"/>
                <Controls:TextEntry Grid.Row="0" Grid.Column="1" LabelText="Password" MaxLength="5"/>

                <Controls:TextEntry Grid.Row="1" Grid.Column="0" Text="{Binding FirstName}" LabelText="First Name" MaxLength="30"/>
                <Controls:TextEntry Grid.Row="1" Grid.Column="1" Text="{Binding LastName}" LabelText="Last Name" MaxLength="30"/>
                <Controls:ComboBoxEntry Grid.Row="2" Grid.Column="0" SelectedItem="{Binding Gender}" LabelText="Gender"/>

                <Controls:TextEntry Grid.Row="2" Grid.Column="1" Text="{Binding CNIC}" LabelText="CNIC" MaxLength="13"/>
                <Controls:TextEntry Grid.Row="3" Grid.Column="0" Text="{Binding DateOfBirth}" LabelText="Date of Birth" MaxLength="13"/>

                <Controls:TextEntry Grid.Row="3" Grid.Column="1" Text="{Binding Contact}" LabelText="Contact Number" MaxLength="11"/>
                <Controls:TextEntry Grid.Row="4" Grid.Column="0" Text="{Binding Email}" LabelText="Email" MaxLength="50"/>

                <Controls:ComboBoxEntry Grid.Row="4" Grid.Column="1" LabelText="Role"/>
                <Controls:TextEntry Grid.Row="5" Grid.Column="0" Text="{Binding Salary}" LabelText="Salary" MaxLength="8"/>

                <Controls:ComboBoxEntry Grid.Row="5" Grid.Column="1" SelectedItem="{Binding City}" x:Name="CityField" LabelText="City"/>
                <Controls:TextEntry Grid.Row="6" Grid.Column="0" Text="{Binding Town}" LabelText="Town" MaxLength="25"/>
                <Controls:TextEntry Grid.Row="6" Grid.Column="1" Text="{Binding StreetAddress}" LabelText="Street Address" MaxLength="25"/>
                <Controls:TextEntry Grid.Row="7" Grid.Column="0" Text="{Binding PostalCode}" LabelText="Postal Code" MaxLength="6"/>


                <Button x:Name="ConfirmButton" Grid.Row="8" Grid.Column="0" Height="50" Width="100" HorizontalAlignment="Right" Margin="0 0 30 0" Content="Add" />
                <Button Grid.Row="8" Grid.Column="1" Height="50" Width="100" HorizontalAlignment="Left" Margin="30 0 0 0" Content="Cancel" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>